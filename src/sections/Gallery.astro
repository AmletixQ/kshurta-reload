---
import SectionHeading from "@components/SectionHeading.astro";
import { galleryImages } from "../utils/image";
import { Image } from "astro:assets";
---

<section id="gallery" class="flex flex-col gap-7.5">
  <SectionHeading>Галерея</SectionHeading>
  <article
    class="space-x grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6 gap-4"
  >
    {
      galleryImages.map((image) => (
        <Image
          width={254}
          src={image.src}
          alt={image.alt}
          class="place-self-center"
        />
      ))
    }
  </article>
</section>
