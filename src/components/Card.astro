---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
}

const { image } = Astro.props;
---

<div class="relative">
  <Image src={image} alt="first-card-image" />
  <div class="absolute px-5 pb-5 bottom-0 text-white flex flex-col gap-2.5">
    <slot name="title" />
    <slot name="description" />
  </div>
</div>
